<body>
  <h1>Fast-Growing Symbolic Progression</h1>
  <div class="number">0</div>

<script>
const progression = [
  "0",
  "{10, 10, 10, 10}",
  "{10, 10 [2] 2}",
  "{100, 49 [1 \\ 2] 2}",
  "{100, 100 [1 [2 Â¬ 2] 2] 2}",
  "s(10, 10 {1,, 1 {1,, 1,, 2} 2} 2)"
];

let step = 0;

function updateDisplay() {
  const el = document.querySelector('.number');
  el.textContent = progression[step];
  
  if (step < progression.length - 1) {
    step++;
    setTimeout(updateDisplay, 1500);
  } else {
    el.textContent += "  (Limit Stage)";
  }
}

updateDisplay();
</script>
